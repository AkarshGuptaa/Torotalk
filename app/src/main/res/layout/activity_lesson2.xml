<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lesson2">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        android:text="Lesson 2"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="346dp"
        android:layout_height="145dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Just putting in 'e' at the end of words ending in 'ant' in english will usually give you the spanish word for it. Like important becomes importante in spanish."
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="346dp"
        android:layout_height="159dp"
        android:layout_marginStart="30dp"
        android:text="Words that end in 'ly' in english can be replaced by 'mente' and you will get the spanish word for it. Like constantly become constantmente. Legally is legalmente. Really is realmente. Fun fact: Real Madrid means Royal Madrid."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="344dp"
        android:layout_height="126dp"
        android:layout_marginStart="30dp"
        android:text="'j' sound is pronounced 'h' or 'kh' in spanish. Like the word Argentina is pronounced Arkhentina. Words ending with '-ble' are pronounced 'b-le'. Like possible is pronounced po-see-b-le"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="151dp"
        android:layout_height="57dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="Quiz"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>