<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#303b4d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lesson1"
        android:layout_width="377dp"
        android:layout_height="78dp"
        android:layout_marginTop="30dp"
        android:text="Lesson 1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lesson2"
        android:layout_width="378dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="Lesson 2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/lesson1"
        app:layout_constraintStart_toStartOf="@+id/lesson1"
        app:layout_constraintTop_toBottomOf="@+id/lesson1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lesson3"
        android:layout_width="376dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:text="Lesson 3"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/lesson2"
        app:layout_constraintTop_toBottomOf="@+id/lesson2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lesson4"
        android:layout_width="381dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:text="Lesson 4"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/lesson3"
        app:layout_constraintTop_toBottomOf="@+id/lesson3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lesson5"
        android:layout_width="377dp"
        android:layout_height="81dp"
        android:layout_marginTop="30dp"
        android:text="Lesson 5"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/lesson4"
        app:layout_constraintTop_toBottomOf="@+id/lesson4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LESSONS"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
